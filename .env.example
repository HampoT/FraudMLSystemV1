# Fraud Detection ML System - Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_KEY=your-api-key-here
API_KEY_ADMIN=your-admin-api-key-here

# Model Configuration
MODEL_PATH=artifacts/model.joblib
META_PATH=artifacts/model_meta.json
MODEL_TYPE=LogisticRegression

# Backend URL (for Streamlit dashboard)
BACKEND_URL=http://localhost:8000

# Database Configuration (optional - for production)
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_db

# Redis Cache (optional - for production)
REDIS_URL=redis://localhost:6379

# Kaggle Dataset (optional)
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# Drift Detection
DRIFT_DETECTION_ENABLED=true
DRIFT_THRESHOLD=0.1
